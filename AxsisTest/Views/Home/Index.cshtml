@model IEnumerable<AxsisTest.Models.Usuario>
@{
    ViewBag.Title = "Usuarios";
}

<div class="container">
    <h2>Usuarios</h2>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Correo</th>
                <th>Sexo</th>
                <th>Estatus</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.NombreUsuario</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Sexo</td>
                    <td class="@Html.Raw(usuario.Estatus ? "text-success" : "text-danger")">@Html.Raw(usuario.Estatus ? "Activo" : "Inactivo")</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { Id = usuario.Id }) | @Html.ActionLink("Editar", "Update", new { Id = usuario.Id })</td>
                </tr>
            }

        </tbody>
    </table>
</div>
