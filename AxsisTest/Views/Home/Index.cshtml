@model IEnumerable<AxsisTest.Models.Usuario>
@{
    ViewBag.Title = "Usuarios";
}

<div ng-app="" class="container">
    <h2>Usuarios</h2>
    <table  class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Correo</th>
                <th>Sexo</th>
                <th>Estatus</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody ng-init = "usuarios = @Json.Encode(Model)">
                <tr ng-repeat="usuario in usuarios">
                    <td>{{usuario.Id}}</td>
                    <td>{{usuario.NombreUsuario}}</td>
                    <td>{{usuario.Correo}}</td>
                    <td>{{usuario.Sexo}}</td>
                    <td class="{{usuario.Estatus ? 'text-success' : 'text-danger' }}">{{usuario.Estatus ? 'Activo' : 'Inactivo' }}</td>
                    <td><a href="{{'Home/Update?id='+usuario.Id}}">Editar</a> | <a href="{{'Home/Delete?id='+usuario.Id}}">Eliminar</a></td>
                </tr>
        </tbody>
    </table>
</div>
